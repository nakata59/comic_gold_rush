<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2 items-center px-5 py-12 lg:px-20 text-center">
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :email,class: 'block text-sm font-medium text-neutral-600' %>
          <%= f.text_field :email, class: 'mx-auto form-control block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2' %>
        </div>
        <div class="form-group">
          <%= f.label :password, class: 'mt-3 block text-sm font-medium text-neutral-600' %>
          <%= f.password_field :password, class: 'mx-auto form-control block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2' %>
        </div>
        <div class="actions px-5 py-4 text-base font-medium text-center">
          <%= f.submit 'ログイン', class: 'btn btn-primary text-white transition duration-500 ease-in-out transform bg-blue-600 lg:px-10 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to '登録ページへ', new_user_path %>
      </div>
    </div>
  </div>
</div>